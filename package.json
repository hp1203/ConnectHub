{
  "name": "ConnectHub",
  "version": "1.0.0",
  "scripts": {
    "build": "if-env TYPE=server && (cd server && npm install) || (cd client && npm install)",
    "server": "node ./server/index.js",
    "dev-server": "nodemon ./server/index.js",
    "client": "cd client && npm start",
    "dev-client": "cd client && npm run dev"
  }
}