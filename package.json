{
  "name": "ConnectHub",
  "version": "1.0.0",
  "scripts": {
    "build": "if-env TYPE=server && (cd server && npm install) || (cd frontend && npm install)",
    "server": "node ./server/index.js",
    "dev-server": "cd server && nodemon index.js",
    "client": "cd frontend && npm start",
    "dev-client": "cd frontend && npm run dev"
  }
}